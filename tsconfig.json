{
  "compilerOptions": {
    "module": "NodeNext", // Uses Node.js native module resolution
    "moduleResolution": "NodeNext", // Resolves modules using Node.js rules
    "target": "ES2020", // Outputs ECMAScript 2020 compatible JavaScript
    "sourceMap": true, // Generates source maps for easier debugging
    "outDir": "dist" // Specifies the output directory for compiled files
  },
  "include": ["src/**/*.ts","test/**/*.ts"], // Includes all TypeScript files in the project
}
